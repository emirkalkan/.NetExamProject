@model CatDate

<h1>Your date registeration is successful</h1>

<h2>Thanks host cat, @ViewBag.HostCat.Name</h2>

<h2>Thanks guest cat, @ViewBag.GuestCat.Name</h2>



<div class="container">
    <div class="row">
        <div class="card-col-12 col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-2"> <!-- ekran ölçülerine göre düzenliyor her biri 12 toplam alanımız, 12/12den 1 tane rowa, 12/6 dan 2 tane rowa mantığı var.-->
            <div class="card-body">
                <h5 class="card-title">Host Cat: @Model.HostCat.Name</h5>
                <img src="@Url.Content(Model.HostCat.ProfilePicture)" class="card-img-top" alt="profile picture" width="200" height="150" border="5"/>
                <h5 class="card-text">Guest Cat: @Model.GuestCat.Name</h5>
                <img src="@Url.Content(Model.GuestCat.ProfilePicture)" class="card-img-top" alt="profile picture" width="200" height="150" border="5"/>
                <p class="card-text">Date Time: @Model.DateTime</p>
                <p class="card-text">Location: @Model.Location</p>                
            </div>
        </div>
      
    </div>
</div>
